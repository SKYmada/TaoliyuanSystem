<!DOCTYPE html>
<html>
<head>
	<!-- bootstrap美化包 -->
	<%-include('bt.ejs')%>
</head>
<body class="text-center" style="background: url(photo/back1.jpg); background-size: 100% 100%;background-repeat: no-repeat; background-attachment: fixed">



	<div class="container">
		<!-- 导航栏 -->
         <%-include('nav.ejs')%>
				
		<div class="row" style="margin-top: 10px">
				<!-- 左栏 -->
		    <%-include("student_left.ejs") %>

			<div class="col-lg-9">

				<div class="card">
					<div class="card-header">申请入住</div>
					<div class="card-body">

						<p style="color: red"><%- info %></p>

						<form action="/doApply" method="post">
							
							<div class="form-group row">
								<label for="inputPassword3" class="col-sm-3 col-form-label">请选择申请楼号</label>
								<div class="col-sm-3">
									<select class="form-control" name="apply_lou" required>
                                        <% for (var i=0; i < loulist.length;i++) { %>
										<option value=" <%- loulist[i].lou_id %> "><%-loulist[i].lou_id%> </option>
                                        <% } %>
									</select>
								</div>
							</div>
							
							<div class="form-group row">
								<label for="inputEmail3" class="col-sm-3 col-form-label">申请入住寝室号</label>
								<div class="col-sm-3">
									<input type="text" name="apply_room" class="form-control"
										id="inputEmail3" placeholder="寝室号" required>
								</div>
							</div>
								
							<div class="form-group row">
								<div class="col-sm-9">
									<button type="submit" class="btn btn-primary">提交申请</button>
								</div>
							</div>
						</form>



					</div>
				</div>


			</div>
			
		</div>			

			
				
		
	</div>
</body>
</html>
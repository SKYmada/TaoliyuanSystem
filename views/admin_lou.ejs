<!DOCTYPE html>
<html>
<head>
<!-- bootstrap美化包 -->
	<%-include('bt.ejs')%>
</head>
<body class="text-center"
	style="background: url(photo/back1.jpg); background-size: 100% 100%; background-repeat: no-repeat; background-attachment: fixed">

	<div class="container">
		<!-- 导航栏 -->
         <%-include('nav.ejs')%>

		<div class="row" style="margin-top: 10px">			
				<!-- 左栏 -->
		<%-include("admin_left.ejs") %>		
			<div class="col-lg-9">
				<div class="card">
					<div class="card-header">添加楼层</div>
					<div class="card-body">
						<p style="color: red"><%- info %></p>
						<form action="AddLou" method="post">

							<div class="form-group row">
								<label for="inputEmail3" class="col-sm-3 col-form-label">楼号</label>
								<div class="col-sm-6">
									<input type="text" name="lou_id" class="form-control"
										id="inputEmail3" placeholder="楼号" required>
								</div>
							</div>
							
							<div class="form-group row">
								<label for="inputEmail3" class="col-sm-3 col-form-label">楼名</label>
								<div class="col-sm-6">
									<input type="text" name="name" class="form-control"
										id="inputEmail3" placeholder="楼名" required>
								</div>
							</div>
										
							<div class="form-group row">
								<label for="inputPassword3" class="col-sm-3 col-form-label">建造时间</label>
								<div class="col-sm-3">
									<input type="date" name="build_time" class="form-control"
										id="inputPassword3" required>
								</div>
							</div>


							<div class="form-group row">
								<label for="inputEmail3" class="col-sm-3 col-form-label">备注</label>
								<div class="col-sm-6">
									<input type="text" name="remake" class="form-control"
										id="inputEmail3" placeholder="备注" required>
								</div>
							</div>
							
							
							<div class="form-group row">
								<div class="col-sm-10">
									<button type="submit" class="btn btn-primary">添加</button>
								</div>
							</div>
						</form>



					</div>
				</div>


			</div>



		</div>




	</div>
</body>
</html>